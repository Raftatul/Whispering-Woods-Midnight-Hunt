<Project Sdk="Godot.NET.Sdk/4.2.0">
  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <TargetFramework Condition=" '$(GodotTargetPlatform)' == 'android' ">net7.0</TargetFramework>
    <TargetFramework Condition=" '$(GodotTargetPlatform)' == 'ios' ">net8.0</TargetFramework>
    <EnableDynamicLoading>true</EnableDynamicLoading>
    <RootNamespace>DbD</RootNamespace>
    <CopyLocalFiles>true</CopyLocalFiles>

  </PropertyGroup>
  <ItemGroup>
  
    <Reference Include="Facepunch.Steamworks.Win64">
      <HintPath>DLL\Facepunch.Steamworks.Win64.dll</HintPath>
    </Reference>

    <!-- copy steam_api64 to output -->
    <Content Include="steam_api64.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>

    <!-- copy steam_api to output -->
    <Content Include="steam_api.dll">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>

    <!-- copy steam_appid.txt to output -->
    <Content Include="steam_appid.txt">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    
  </ItemGroup>

</Project>